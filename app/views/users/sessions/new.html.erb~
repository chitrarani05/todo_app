    </div>
    </br>
    <div>
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control", required: 'true', style: 'width: 50%;' %>
    </div>
    <br>
    <div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    </div>
  <% end %>

